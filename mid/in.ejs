<%- include('headerr.ejs') %>
    <h1>首頁</h1>

    <form action="/" method="POST">
        用戶名<input type="text" id="username" name="username"><br/>
        密碼<input type="password" name="password" id="password"><br/>
        <input type="submit" value="登入">
    </form>
    
    <!-- %=直接顯示值 -->
    <h2><%=time%></h2>  

    <% if(blogs.length) { %>

        <!-- forEach取出每個值,印出 -->
        <% blogs.forEach(article => { %>
            <h3>標題 :<%=article.title%></h3>
            <p>作者 :<%=article.author%></p>
            <!-- <p>一二三</p> -->
        <% }) %>
    <% } %>  
